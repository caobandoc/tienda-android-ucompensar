<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/edit_text_background">

    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_shopping_cart_foreground"
        android:contentDescription="@string/product_img"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mock_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mock_value"
            android:textSize="14sp"
            android:textColor="@color/blue_primary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_decrease"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/decrease"
                android:textSize="25sp"
                android:backgroundTint="@color/blue_background" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mock_quantity"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp" />

            <Button
                android:id="@+id/btn_increase"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/increase"
                android:textSize="25sp"
                android:backgroundTint="@color/blue_background" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|end">

        <TextView
            android:id="@+id/tv_subtotal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtotal"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mock_value"
            android:textSize="16sp"
            android:textColor="@color/blue_primary"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_remove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:backgroundTint="@color/red"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/remove_item" />
    </LinearLayout>
</LinearLayout>